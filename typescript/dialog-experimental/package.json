{
  "name": "@dialog-db/experimental",
  "version": "0.0.8",
  "description": "Dialog experimental runtime",
  "main": "dist/src/lib.js",
  "type": "module",
  "scripts": {
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "test:web": "playwright-test --runner entail 'test/*.spec(.web).ts' --assets src/artifacts",
    "test:node": "ts-mocha -n loader=ts-node/esm -p ./tsconfig.json ./test/*.spec.ts",
    "test": "npm run test:node && npm run test:web",
    "coverage": "c8 entail dist/test/**/*.spec.ts",
    "compile": "tsc --build && mkdir -p dist/src && cp -r src/artifacts dist/src/artifacts",
    "check": "tsc --build --noEmit"
  },
  "keywords": [
    "datalog",
    "ui",
    "view",
    "db"
  ],
  "files": [
    "src",
    "test",
    "dist",
    "dist/src/artifacts/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/lib.d.ts",
      "import": "./dist/src/lib.js"
    },
    "./react": {
      "types": "./dist/src/react.d.ts",
      "import": "./dist/src/react.js"
    }
  },
  "dependencies": {
    "@dialog-db/query": "^0.11.1",
    "react": ">=19"
  },
  "devDependencies": {
    "react-dom": "19.1.0",
    "entail": "^3.0.1",
    "playwright-test": "^14.1.9",
    "@testing-library/react": "16.3.0",
    "@types/deno": "^2.0.0",
    "@types/mocha": "^10.0.10",
    "@types/react": "19.1.3",
    "c8": "8.0.1",
    "mocha": "^11.2.2",
    "ts-mocha": "^11.1.0",
    "prettier": "3.1.0",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "experimentalTernaries": true,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "filepath": "**/*.ts"
  }
}

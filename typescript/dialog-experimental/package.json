{
  "name": "@dialog-db/experimental",
  "version": "0.0.4",
  "description": "Dialog experimental runtime",
  "main": "lib.js",
  "type": "module",
  "scripts": {
    "vendor": "rm -rf src/vendor && nix build .#dialog-artifacts-web && cp -r result/dialog-artifacts src/artifacts && chmod -R 0755 src/artifacts && rm result",
    "build": "npm run vendor && npm run check",
    "prepublishOnly": "npm run build",
    "test:web": "playwright-test --runner entail 'test/**/*.spec(.web).js' --assets ./src/artifacts/",
    "test:node": "entail 'test/*.spec.js'",
    "test": "npm run test:node && npm run test:web",
    "coverage": "c8 entail test/**/*.spec.js",
    "check": "tsc --build"
  },
  "keywords": [
    "datalog",
    "ui",
    "view",
    "db"
  ],
  "files": [
    "src",
    "src/artifacts/*",
    "dist/src"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/lib.d.ts",
      "import": "./src/lib.js"
    }
  },
  "dependencies": {
    "@dialog-db/query": "^0.11.1"
  },
  "devDependencies": {
    "@types/deno": "^2.0.0",
    "c8": "8.0.1",
    "entail": "^2.1.2",
    "playwright-test": "^14.1.9",
    "prettier": "3.1.0",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "experimentalTernaries": true,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}

{
  "manifest_version": 3,
  "name": "Dialog Inspector",
  "version": "0.1.0",
  "description": "Devtools panel for inspecting dialog-db instances in IndexedDB",
  "devtools_page": "devtools.html",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_loader.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
    "sandbox": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["content_bg.wasm", "content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
